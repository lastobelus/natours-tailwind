{
  "name": "natours",
  "version": "1.0.0",
  "description": "Exercise from Udemy Advanced CSS and Sass",
  "main": "index.js",
  "scripts": {
    "serve": "cross-env NODE_ENV=development concurrently \"postcss styles/main.css -o public/css/style.css --watch\"  \"live-server ./public\"",
    "development": "cross-env NODE_ENV=development postcss styles/main.css -o public/css/style.css",
    "production": "cross-env NODE_ENV=production postcss styles/main.css -o public/css/style.css",
    "test": "cross-env NODE_ENV=test postcss test.css -o public/css/test.css",
    "start": "npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lastobelus/natours.git"
  },
  "author": "Michael Johnston",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lastobelus/natours/issues"
  },
  "homepage": "https://github.com/lastobelus/natours#readme",
  "dependencies": {
    "autoprefixer": "^9.5.1",
    "postcss-custom-properties": "^9.0.2",
    "postcss-functions": "^3.0.0",
    "postcss-hexrgba": "^2.0.0",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "tailwindcss": "^1.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "node-sass": "^4.13.1",
    "postcss-cli": "^6.1.2"
  }
}
